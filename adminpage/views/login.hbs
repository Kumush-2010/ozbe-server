<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/login.css" />
    <title>Log In Page</title>
  </head>

  <body>
    <div class="login-box">
      <h2>Log In</h2>
      <form action="/api/auth/login" method="POST">
        <div class="user-box">
          <input
            id="email"
            type="email"
            name="email"
            placeholder="Email"
            required
          />
        </div>

        <div class="user-box">
          <input
            id="password"
            type="password"
            name="password"
            placeholder="Password"
            required
          />
        </div>

        <button class="submit" type="submit">
          <span></span><span></span><span></span><span></span>
          Submit
        </button>
      </form>
    </div>

    {{!-- <script src="/adminpage/js/login.js"></script> --}}
  </body>

</html>